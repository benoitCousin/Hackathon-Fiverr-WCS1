{% extends 'base.html.twig' %}

{% block title %}Challenge{% endblock %}

{% block body %}
    <h1>Challenge</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ challenge.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ challenge.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ challenge.description }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ challenge.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Validation</th>
                <td>{{ challenge.validation }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ challenge.createdAt ? challenge.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('challenge_index') }}">back to list</a>

    <a href="{{ path('challenge_edit', {'id': challenge.id}) }}">edit</a>

    {{ include('challenge/_delete_form.html.twig') }}
{% endblock %}
